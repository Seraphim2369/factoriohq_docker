<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Game Logs for <%= @server.name %></h1>
  <%= link_to "Back to Server", factorio_server_path(@server), class: "btn btn-outline-secondary" %>
</div>

<div class="card">
  <div class="card-body">
    <% if @logs.empty? %>
      <p class="text-muted">No logs available yet.</p>
    <% else %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Time</th>
              <th>Message</th>
            </tr>
          </thead>
          <tbody>
            <% @logs.each do |log| %>
              <tr>
                <td class="text-nowrap"><%= log.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                <td><%= log.message %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>